<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Placeholder image -->

            <com.google.android.material.imageview.ShapeableImageView
                android:background="@drawable/roundstyle"
                android:id="@+id/imageViewPlasticDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="plastic image"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCorners"
                tools:src="@drawable/pet_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|start"
                android:background="@drawable/roundstyle"
                android:padding="8dp"
                android:layout_margin="12dp"
                app:shapeAppearanceOverlay="@style/RoundedCorners">

                <ImageView
                    android:id="@+id/imageViewPlasticSymbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="recycling symbol"
                    tools:src="@drawable/ic_pet" /> <!-- Placeholder image -->

                <TextView
                    android:id="@+id/textViewPlasticNameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Plastik"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- CardView for "Deskripsi Plastik" -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Plastik"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for "Cara Daur Ulang" -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewRecyclingProcessDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cara Daur Ulang"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewRecyclingProcessDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proses daur ulang plastik."
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for "Bahaya bagi Lingkungan" -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewEnvironmentalImpactDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahaya bagi Lingkungan"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEnvironmentalImpactDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dampak lingkungan dari plastik."
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewExamplesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contoh Benda"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlideshow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:iss_auto_cycle="true"
            app:iss_period="5000"
            app:indicatorSize="32dp"
            app:iss_corner_radius="70"/>

    </LinearLayout>

</ScrollView>
